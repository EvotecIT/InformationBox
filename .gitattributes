* text=auto

# Windows-style line endings for typical .NET/PS/text files
*.cs       text eol=crlf
*.csproj   text eol=crlf
*.sln      text eol=crlf
*.ps1      text eol=crlf
*.psm1     text eol=crlf
*.psd1     text eol=crlf
*.cmd      text eol=crlf
*.bat      text eol=crlf

# Common text formats
*.txt      text eol=crlf
*.md       text eol=lf
*.yml      text eol=lf
*.yaml     text eol=lf
*.json     text eol=lf
