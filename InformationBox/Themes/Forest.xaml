<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Forest Theme - Deep green tones -->

    <!-- Window -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#0a1f0a" />

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#dcfce7" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#86efac" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="#4ade80" />
    <SolidColorBrush x:Key="TextLabelBrush" Color="#22c55e" />

    <!-- Cards -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#14532d" />
    <SolidColorBrush x:Key="CardBorderBrush" Color="#166534" />
    <Color x:Key="CardShadowColor">#000000</Color>

    <!-- Status Hero Card -->
    <SolidColorBrush x:Key="StatusCardBackgroundBrush" Color="#15803d" />
    <SolidColorBrush x:Key="StatusCardBorderBrush" Color="#16a34a" />
    <SolidColorBrush x:Key="StatusCardDividerBrush" Color="#22c55e" />
    <SolidColorBrush x:Key="StatusCardLabelBrush" Color="#86efac" />
    <SolidColorBrush x:Key="StatusCardValueBrush" Color="#f0fdf4" />
    <SolidColorBrush x:Key="StatusCardCaptionBrush" Color="#4ade80" />

    <!-- Tabs -->
    <SolidColorBrush x:Key="TabInactiveForegroundBrush" Color="#86efac" />
    <SolidColorBrush x:Key="TabHoverBackgroundBrush" Color="#14532d" />
    <SolidColorBrush x:Key="TabHoverForegroundBrush" Color="#dcfce7" />
    <SolidColorBrush x:Key="TabSelectedForegroundBrush" Color="White" />

    <!-- Buttons -->
    <SolidColorBrush x:Key="ChipBackgroundBrush" Color="#14532d" />
    <SolidColorBrush x:Key="ChipBorderBrush" Color="#166534" />
    <SolidColorBrush x:Key="ChipForegroundBrush" Color="#86efac" />
    <SolidColorBrush x:Key="ChipHoverBackgroundBrush" Color="#15803d" />
    <SolidColorBrush x:Key="ChipHoverBorderBrush" Color="#16a34a" />
    <SolidColorBrush x:Key="ChipPressedBackgroundBrush" Color="#166534" />

    <SolidColorBrush x:Key="CloseButtonBackgroundBrush" Color="#14532d" />
    <SolidColorBrush x:Key="CloseButtonForegroundBrush" Color="#86efac" />
    <SolidColorBrush x:Key="CloseButtonBorderBrush" Color="#166534" />
    <SolidColorBrush x:Key="CloseButtonHoverBackgroundBrush" Color="#15803d" />

    <!-- Footer -->
    <SolidColorBrush x:Key="FooterBorderBrush" Color="#166534" />

    <!-- Warning Banner -->
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#422006" />
    <SolidColorBrush x:Key="WarningBorderBrush" Color="#b45309" />
    <SolidColorBrush x:Key="WarningForegroundBrush" Color="#fbbf24" />

</ResourceDictionary>
