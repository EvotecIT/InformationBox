<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Sunset Theme - Warm orange/purple tones -->

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#f97316" />
    <SolidColorBrush x:Key="AccentBrushDark" Color="#ea580c" />
    <SolidColorBrush x:Key="AccentBrushLight" Color="#7c2d12" />
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="White" />
    <Color x:Key="AccentShadowColor">#f97316</Color>

    <!-- Window -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1c1017" />

    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#fef3c7" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#fdba74" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="#fb923c" />
    <SolidColorBrush x:Key="TextLabelBrush" Color="#f97316" />

    <!-- Cards -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#431407" />
    <SolidColorBrush x:Key="CardBorderBrush" Color="#9a3412" />
    <Color x:Key="CardShadowColor">#000000</Color>

    <!-- Status Hero Card -->
    <SolidColorBrush x:Key="StatusCardBackgroundBrush" Color="#7c2d12" />
    <SolidColorBrush x:Key="StatusCardBorderBrush" Color="#c2410c" />
    <SolidColorBrush x:Key="StatusCardDividerBrush" Color="#ea580c" />
    <SolidColorBrush x:Key="StatusCardLabelBrush" Color="#fdba74" />
    <SolidColorBrush x:Key="StatusCardValueBrush" Color="#fff7ed" />
    <SolidColorBrush x:Key="StatusCardCaptionBrush" Color="#fb923c" />

    <!-- Tabs -->
    <SolidColorBrush x:Key="TabInactiveForegroundBrush" Color="#fdba74" />
    <SolidColorBrush x:Key="TabHoverBackgroundBrush" Color="#431407" />
    <SolidColorBrush x:Key="TabHoverForegroundBrush" Color="#fef3c7" />
    <SolidColorBrush x:Key="TabSelectedForegroundBrush" Color="White" />

    <!-- Buttons -->
    <SolidColorBrush x:Key="ChipBackgroundBrush" Color="#431407" />
    <SolidColorBrush x:Key="ChipBorderBrush" Color="#9a3412" />
    <SolidColorBrush x:Key="ChipForegroundBrush" Color="#fdba74" />
    <SolidColorBrush x:Key="ChipHoverBackgroundBrush" Color="#7c2d12" />
    <SolidColorBrush x:Key="ChipHoverBorderBrush" Color="#c2410c" />
    <SolidColorBrush x:Key="ChipPressedBackgroundBrush" Color="#9a3412" />

    <SolidColorBrush x:Key="CloseButtonBackgroundBrush" Color="#431407" />
    <SolidColorBrush x:Key="CloseButtonForegroundBrush" Color="#fdba74" />
    <SolidColorBrush x:Key="CloseButtonBorderBrush" Color="#9a3412" />
    <SolidColorBrush x:Key="CloseButtonHoverBackgroundBrush" Color="#7c2d12" />

    <!-- Footer -->
    <SolidColorBrush x:Key="FooterBorderBrush" Color="#9a3412" />

    <!-- ComboBox -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#431407" />
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#9a3412" />
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#fdba74" />
    <SolidColorBrush x:Key="ComboBoxHoverBackgroundBrush" Color="#7c2d12" />
    <SolidColorBrush x:Key="ComboBoxDropdownBackgroundBrush" Color="#431407" />
    <SolidColorBrush x:Key="ComboBoxItemHoverBrush" Color="#7c2d12" />

    <!-- Warning Banner -->
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#fef3c7" />
    <SolidColorBrush x:Key="WarningBorderBrush" Color="#fbbf24" />
    <SolidColorBrush x:Key="WarningForegroundBrush" Color="#92400e" />

</ResourceDictionary>
