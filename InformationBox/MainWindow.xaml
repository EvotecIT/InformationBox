<Window x:Class="InformationBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Information Box"
        Height="480" Width="720"
        MinHeight="420" MinWidth="620"
        WindowStartupLocation="Manual"
        Background="White"
        FontFamily="Segoe UI">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

        <!-- Accent colors (overridden at runtime from config) -->
        <SolidColorBrush x:Key="AccentBrush" Color="#0050b3" />
        <SolidColorBrush x:Key="AccentBrushDark" Color="#003f8f" />
        <SolidColorBrush x:Key="AccentBrushLight" Color="#e5f1ff" />
        <SolidColorBrush x:Key="AccentForegroundBrush" Color="White" />

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="#E3E6ED" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="#FBFBFD" />
            <Setter Property="Margin" Value="0 8 0 0" />
        </Style>

        <Style x:Key="PillBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="10 3" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="6 1 0 0" />
            <Setter Property="Height" Value="26" />
        </Style>

        <Style x:Key="SectionHeaderText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0 0 0 4" />
        </Style>

        <DataTemplate x:Key="InfoRowTemplate">
            <Grid Margin="0 4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Label}" FontWeight="SemiBold" Foreground="#333" FontSize="12" />
                <TextBlock Grid.Column="1"
                           Text="{Binding Value}"
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis"
                           FontSize="12"
                           MaxWidth="320" />
            </Grid>
        </DataTemplate>

        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0 6 10 0" />
            <Setter Property="Padding" Value="12 8" />
            <Setter Property="MinWidth" Value="150" />
            <Setter Property="Height" Value="34" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrushDark}" />
            <Setter Property="Foreground" Value="{DynamicResource AccentForegroundBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="ChipButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="4 0 0 0" />
            <Setter Property="Padding" Value="8 4" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="MinWidth" Value="70" />
            <Setter Property="Height" Value="26" />
            <Setter Property="Background" Value="#F1F3F8" />
            <Setter Property="BorderBrush" Value="#D0D5E5" />
            <Setter Property="Foreground" Value="#24324C" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>

    <Grid Margin="10" x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 0 0 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Margin="0 0 6 0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding InfoCard.DisplayName}"
                               FontSize="22"
                               FontWeight="Bold" />
                    <Border Style="{StaticResource PillBadgeStyle}"
                            Background="{Binding InfoCard.JoinBadgeBackground}"
                            BorderBrush="{Binding InfoCard.JoinBadgeBorder}"
                            Visibility="{Binding InfoCard.ShowJoinType, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="{Binding InfoCard.JoinTypeLabel}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{Binding InfoCard.JoinBadgeForeground}"
                                   VerticalAlignment="Center" />
                    </Border>
                </StackPanel>
                <TextBlock Text="{Binding ConfigSource, StringFormat=Config: {0}}"
                           Foreground="#8A8A8A"
                           FontSize="11"
                           Margin="0 2 0 0" />
                <TextBlock Text="{Binding CurrentZone, StringFormat=Zone: {0}}"
                           Foreground="#8A8A8A"
                           FontSize="11"
                           Margin="0 0 0 0"
                           Visibility="{Binding HasZone, Converter={StaticResource BoolToVisibility}}" />
            </StackPanel>

            <Button Grid.Column="1"
                    Content="{Binding PrimaryLink.Name}"
                    Style="{StaticResource LinkButtonStyle}"
                    Margin="12 0 0 0"
                    Padding="16 8"
                    MinWidth="140"
                    Height="40"
                    Visibility="{Binding HasPrimaryLink, Converter={StaticResource BoolToVisibility}}"
                    Command="{Binding LinkCommand}"
                    CommandParameter="{Binding PrimaryLink.Url}" />
        </Grid>

        <TabControl Grid.Row="1" Margin="0 2 0 4" x:Name="MainTabs">
            <TabItem Header="Status">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel>
                        <Border Background="#FFF4E5" BorderBrush="#F3C192" BorderThickness="1" CornerRadius="6" Padding="8" Margin="0 0 0 8"
                                Visibility="{Binding ShowPasswordUnavailable, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Password status unavailable (offline or provider failed)." Foreground="#8A5A15" />
                        </Border>

                        <Border CornerRadius="8"
                                Background="#EEF2FF"
                                BorderBrush="#D4DEF9"
                                BorderThickness="1"
                                Padding="8"
                                Height="96">
                            <UniformGrid Columns="3" Margin="0" VerticalAlignment="Center">
                                <StackPanel Margin="0 0 6 0">
                                    <TextBlock Text="Password" FontSize="11" Foreground="#455070" />
                                    <TextBlock Text="{Binding PasswordStatus.DaysLeftText}" FontSize="16" FontWeight="Bold" />
                                    <TextBlock Text="{Binding PasswordStatus.StatusText}" FontSize="10.5" Foreground="#606B8A" />
                                </StackPanel>
                                <StackPanel Margin="0 0 6 0">
                                    <TextBlock Text="Network" FontSize="11" Foreground="#455070" />
                                    <TextBlock Text="{Binding NetworkStatus.ConnectionType}" FontSize="16" FontWeight="Bold" />
                                    <TextBlock Text="{Binding NetworkStatus.AdapterName}" FontSize="10.5" Foreground="#606B8A" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="IPv4" FontSize="11" Foreground="#455070" />
                                    <TextBlock Text="{Binding NetworkStatus.Ipv4Address}" FontSize="16" FontWeight="Bold" />
                                    <TextBlock Text="{Binding NetworkStatus.Ssid}" FontSize="10.5" Foreground="#606B8A" />
                                    <StackPanel Orientation="Horizontal" Margin="0 2 0 0">
                                        <Button Style="{StaticResource ChipButtonStyle}"
                                                Content="Copy IP"
                                                Command="{Binding CopyTextCommand}"
                                                CommandParameter="{Binding PrimaryIpv4}" />
                                    </StackPanel>
                                </StackPanel>
                            </UniformGrid>
                        </Border>

                        <Grid Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Style="{StaticResource CardBorder}" Margin="0 0 8 0">
                                <StackPanel>
                                    <TextBlock Text="Device" Style="{StaticResource SectionHeaderText}" />
                                    <ItemsControl ItemsSource="{Binding StatusDeviceRows}" ItemTemplate="{StaticResource InfoRowTemplate}" />
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CardBorder}" Grid.Column="1" Margin="8 0 0 0">
                                <StackPanel>
                                    <TextBlock Text="Network" Style="{StaticResource SectionHeaderText}" />
                                    <ItemsControl ItemsSource="{Binding StatusNetworkRows}" ItemTemplate="{StaticResource InfoRowTemplate}" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Account">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel>
                        <Border Background="#FFF4E5" BorderBrush="#F3C192" BorderThickness="1" CornerRadius="6" Padding="8" Margin="0 0 0 8"
                                Visibility="{Binding ShowIdentityUnavailable, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Account data unavailable (offline or provider failed)." Foreground="#8A5A15" />
                        </Border>
                        <Border Style="{StaticResource CardBorder}" Margin="0">
                            <StackPanel>
                                <TextBlock Text="{Binding IdentitySourceLabel}" Style="{StaticResource SectionHeaderText}" />
                                <TextBlock Text="{Binding IdentitySourceCaption}" Foreground="#6F7280" FontSize="11" Margin="0 0 0 6" />
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
                                    <Button Style="{StaticResource ChipButtonStyle}"
                                            Content="Copy UPN"
                                            Command="{Binding CopyTextCommand}"
                                            CommandParameter="{Binding PrimaryUpn}" />
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding IdentityRows}" ItemTemplate="{StaticResource InfoRowTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel ItemWidth="320" MinWidth="300" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Margin" Value="0 4 12 4" />
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Network">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                            <Button Style="{StaticResource ChipButtonStyle}"
                                    Content="Open Network settings"
                                    Command="{Binding OpenSettingsCommand}"
                                    CommandParameter="ms-settings:network-status" />
                            <Button Style="{StaticResource ChipButtonStyle}"
                                    Content="Open VPN settings"
                                    Command="{Binding OpenSettingsCommand}"
                                    CommandParameter="ms-settings:network-vpn" />
                        </StackPanel>
                        <Border Style="{StaticResource CardBorder}" Margin="0 0 0 10">
                            <ItemsControl ItemsSource="{Binding NetworkRows}" ItemTemplate="{StaticResource InfoRowTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="0 2 12 2" />
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </Border>
                        <Border Style="{StaticResource CardBorder}">
                            <ItemsControl ItemsSource="{Binding OverviewRows}" ItemTemplate="{StaticResource InfoRowTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="0 2 12 2" />
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Support"
                     Visibility="{Binding ShowSupportTab, Converter={StaticResource BoolToVisibility}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Links" Style="{StaticResource SectionHeaderText}"
                                       Visibility="{Binding HasLinks, Converter={StaticResource BoolToVisibility}}" />
                            <ItemsControl ItemsSource="{Binding Links}"
                                          Visibility="{Binding HasLinks, Converter={StaticResource BoolToVisibility}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel ItemWidth="210" ItemHeight="42" MinWidth="210" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource LinkButtonStyle}"
                                                Content="{Binding Name}"
                                                Command="{Binding DataContext.LinkCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding Url}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="12 0 0 0">
                            <TextBlock Text="Local sites" Style="{StaticResource SectionHeaderText}"
                                       Visibility="{Binding HasLocalSites, Converter={StaticResource BoolToVisibility}}" />
                            <ItemsControl ItemsSource="{Binding LocalSites}"
                                          Visibility="{Binding HasLocalSites, Converter={StaticResource BoolToVisibility}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource LinkButtonStyle}"
                                                Background="#F7F9FC"
                                                Foreground="#1a2a5f"
                                                BorderBrush="#d0d7ed"
                                                Content="{Binding Label}"
                                                Command="{Binding DataContext.LocalSiteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding Url}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Contacts" Style="{StaticResource SectionHeaderText}" Margin="0 12 0 0"
                                       Visibility="{Binding HasContacts, Converter={StaticResource BoolToVisibility}}" />
                            <ItemsControl ItemsSource="{Binding Contacts}"
                                          Visibility="{Binding HasContacts, Converter={StaticResource BoolToVisibility}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardBorder}" Margin="0 6 0 0" Padding="10">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Label}" FontWeight="SemiBold" />
                                                <TextBlock Text="{Binding Email}" />
                                                <TextBlock Text="{Binding Phone}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Fix"
                     Visibility="{Binding ShowFixTab, Converter={StaticResource BoolToVisibility}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                    <ItemsControl ItemsSource="{Binding Fixes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="260" MinWidth="260" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardBorder}" Padding="10" Margin="0 0 8 8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                            <TextBlock Text="{Binding Category}" Foreground="#6F7280" FontSize="11" />
                                        </StackPanel>
                                        <TextBlock Grid.Row="1" Text="{Binding Description}" TextWrapping="Wrap" FontSize="12" Margin="0 4 0 6" />
                                        <Button Grid.Row="2"
                                                Style="{StaticResource ChipButtonStyle}"
                                                Content="Run"
                                                HorizontalAlignment="Left"
                                                Command="{Binding DataContext.RunFixCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <Border Grid.Row="2"
                Padding="8 6"
                Background="#FAFAFA"
                BorderBrush="#E6E6E6"
                BorderThickness="1,1,0,0"
                Margin="0 2 0 0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close"
                        Width="95"
                        Height="32"
                        IsCancel="True"
                        Click="Close_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
