<Window x:Class="InformationBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Information Box"
        Height="480" Width="720"
        MinHeight="420" MinWidth="620"
        WindowStartupLocation="Manual"
        Background="{DynamicResource WindowBackgroundBrush}"
        FontFamily="Segoe UI">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

        <!-- Modern Card Style with Shadow -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
            <Setter Property="Margin" Value="0 4 0 0" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.04" Color="{DynamicResource CardShadowColor}" Direction="270" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pill Badge Style -->
        <Style x:Key="PillBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="10 3" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="8 0 0 0" />
            <Setter Property="Height" Value="24" />
        </Style>

        <!-- Section Header Typography -->
        <Style x:Key="SectionHeaderText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="Margin" Value="0 0 0 4" />
        </Style>

        <!-- Info Row Template with refined typography -->
        <DataTemplate x:Key="InfoRowTemplate">
            <Grid Margin="0 3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Label}" FontWeight="Medium" Foreground="{DynamicResource TextLabelBrush}" FontSize="11.5" />
                <TextBlock Grid.Column="1"
                           Text="{Binding Value}"
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="12"
                           MaxWidth="320" />
            </Grid>
        </DataTemplate>

        <!-- Modern Tab Control Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <!-- Modern Tab Item Style with Underline -->
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0 0 2 0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid x:Name="Root" Background="Transparent" SnapsToDevicePixels="True">
                            <Border x:Name="TabBorder"
                                    Background="Transparent"
                                    Padding="12 6"
                                    CornerRadius="6">
                                <ContentPresenter x:Name="ContentSite"
                                                  ContentSource="Header"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  TextBlock.FontSize="13"
                                                  TextBlock.FontWeight="Medium"
                                                  TextBlock.Foreground="{DynamicResource TabInactiveForegroundBrush}" />
                            </Border>
                            <Border x:Name="Underline"
                                    Height="2"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    CornerRadius="1"
                                    Margin="6 0" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ContentSite" Property="TextBlock.Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                                <Setter TargetName="ContentSite" Property="TextBlock.FontWeight" Value="SemiBold" />
                                <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource ChipHoverBackgroundBrush}" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsSelected" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="ContentSite" Property="TextBlock.Foreground" Value="{DynamicResource TabHoverForegroundBrush}" />
                                <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource TabHoverBackgroundBrush}" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Action Button Style - subtle like chips -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0 6 10 0" />
            <Setter Property="Padding" Value="16 10" />
            <Setter Property="MinWidth" Value="150" />
            <Setter Property="Height" Value="38" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="{DynamicResource ChipBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ChipForegroundBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource ChipBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ChipHoverBackgroundBrush}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource ChipHoverBorderBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ChipPressedBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Chip/Secondary Button Style -->
        <Style x:Key="ChipButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="4 0 0 0" />
            <Setter Property="Padding" Value="10 4" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="MinWidth" Value="60" />
            <Setter Property="Height" Value="26" />
            <Setter Property="Background" Value="{DynamicResource ChipBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ChipForegroundBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource ChipBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ChipHoverBackgroundBrush}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource ChipHoverBorderBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ChipPressedBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16 8" />
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Background" Value="{DynamicResource CloseButtonBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource CloseButtonForegroundBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{DynamicResource CloseButtonBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource CloseButtonHoverBackgroundBrush}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource ChipHoverBorderBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ChipHoverBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Themed ComboBox Style -->
        <Style x:Key="ThemedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource ComboBoxBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ComboBoxForegroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ComboBoxBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8 4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left" />
                                    <Path Grid.Column="1"
                                          Data="M0,0 L4,4 L8,0"
                                          Fill="{TemplateBinding Foreground}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Stroke="{TemplateBinding Foreground}"
                                          StrokeThickness="1" />
                                </Grid>
                            </Border>
                            <ToggleButton x:Name="ToggleButton"
                                          Grid.ColumnSpan="2"
                                          Focusable="False"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="Transparent"
                                          BorderThickness="0" />
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDown"
                                        Background="{DynamicResource ComboBoxDropdownBackgroundBrush}"
                                        BorderBrush="{DynamicResource ComboBoxBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        Margin="0 2 0 0"
                                        SnapsToDevicePixels="True">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ComboBoxHoverBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Themed ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource ComboBoxForegroundBrush}" />
            <Setter Property="Padding" Value="8 6" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter TextBlock.Foreground="{DynamicResource ComboBoxForegroundBrush}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ComboBoxItemHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ComboBoxItemHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ComboBoxItemHoverBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search TextBox Style -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource ComboBoxBackgroundBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ComboBoxBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8 6" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                                <TextBlock x:Name="Placeholder"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="{DynamicResource TextMutedBrush}"
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ChipHoverBorderBrush}" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10" x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 0 0 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Margin="0 0 12 0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="{Binding LogoSource, TargetNullValue={x:Null}}"
                           Width="{Binding LogoWidth}"
                           Height="{Binding LogoHeight}"
                           Margin="0 0 10 0"
                           VerticalAlignment="Center"
                           Stretch="Uniform"
                           Visibility="{Binding HasLogo, Converter={StaticResource BoolToVisibility}}" />
                    <TextBlock Text="{Binding InfoCard.DisplayName}"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <Border Style="{StaticResource PillBadgeStyle}"
                            Background="{Binding InfoCard.JoinBadgeBackground}"
                            BorderBrush="{Binding InfoCard.JoinBadgeBorder}"
                            Visibility="{Binding InfoCard.ShowJoinType, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="{Binding InfoCard.JoinTypeLabel}"
                                   FontSize="11"
                                   FontWeight="Medium"
                                   Foreground="{Binding InfoCard.JoinBadgeForeground}"
                                   VerticalAlignment="Center" />
                    </Border>
                </StackPanel>
                <TextBlock Text="{Binding ConfigSource, StringFormat=Config: {0}}"
                           Foreground="{DynamicResource TextMutedBrush}"
                           FontSize="11"
                           Margin="0 2 0 0" />
                <TextBlock Text="{Binding CurrentZone, StringFormat=Zone: {0}}"
                           Foreground="{DynamicResource TextMutedBrush}"
                           FontSize="11"
                           Margin="0 1 0 0"
                           Visibility="{Binding HasZone, Converter={StaticResource BoolToVisibility}}" />
            </StackPanel>

            <Button Grid.Column="1"
                    Content="{Binding PrimaryLink.Name}"
                    Style="{StaticResource LinkButtonStyle}"
                    Margin="12 0 0 0"
                    Padding="16 8"
                    MinWidth="130"
                    Height="38"
                    Visibility="{Binding HasPrimaryLink, Converter={StaticResource BoolToVisibility}}"
                    Command="{Binding LinkCommand}"
                    CommandParameter="{Binding PrimaryLink.Url}" />
        </Grid>

        <TabControl Grid.Row="1" Margin="0 4 0 4" x:Name="MainTabs">
            <TabItem Header="Status">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel>
                        <Border Background="{DynamicResource WarningBackgroundBrush}" BorderBrush="{DynamicResource WarningBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0 0 0 12"
                                Visibility="{Binding ShowPasswordUnavailable, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Password status unavailable (offline or provider failed)." Foreground="{DynamicResource WarningForegroundBrush}" FontSize="12" />
                        </Border>

                        <Border CornerRadius="8"
                                Background="{DynamicResource StatusCardBackgroundBrush}"
                                BorderBrush="{DynamicResource StatusCardBorderBrush}"
                                BorderThickness="1"
                                Padding="10"
                                MinHeight="80">
                            <UniformGrid Columns="3" Margin="0" VerticalAlignment="Center">
                                <StackPanel Margin="0 0 6 0">
                                    <TextBlock Text="Password" FontSize="10.5" Foreground="{DynamicResource StatusCardLabelBrush}" FontWeight="Medium" />
                                    <TextBlock Text="{Binding PasswordStatus.DaysLeftText}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource StatusCardValueBrush}" Margin="0 1 0 0" />
                                    <TextBlock Text="{Binding PasswordStatus.StatusText}" FontSize="10" Foreground="{DynamicResource StatusCardCaptionBrush}" />
                                </StackPanel>
                                <Border BorderBrush="{DynamicResource StatusCardDividerBrush}" BorderThickness="1 0 0 0" Padding="8 0 6 0">
                                    <StackPanel>
                                        <TextBlock Text="Network" FontSize="10.5" Foreground="{DynamicResource StatusCardLabelBrush}" FontWeight="Medium" />
                                        <TextBlock Text="{Binding NetworkStatus.ConnectionType}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource StatusCardValueBrush}" Margin="0 1 0 0" />
                                        <TextBlock Text="{Binding NetworkStatus.AdapterName}" FontSize="10" Foreground="{DynamicResource StatusCardCaptionBrush}" />
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="{DynamicResource StatusCardDividerBrush}" BorderThickness="1 0 0 0" Padding="8 0 0 0">
                                    <StackPanel>
                                        <TextBlock Text="IPv4" FontSize="10.5" Foreground="{DynamicResource StatusCardLabelBrush}" FontWeight="Medium" />
                                        <TextBlock Text="{Binding NetworkStatus.Ipv4Address}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource StatusCardValueBrush}" Margin="0 1 0 0" />
                                        <StackPanel Orientation="Horizontal" Margin="0 1 0 0">
                                            <Button Style="{StaticResource ChipButtonStyle}"
                                                    Margin="0"
                                                    Content="Copy IP"
                                                    Command="{Binding CopyTextCommand}"
                                                    CommandParameter="{Binding PrimaryIpv4}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>
                        </Border>

                        <Grid Margin="0 8 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Style="{StaticResource CardBorder}" Margin="0 0 6 0">
                                <StackPanel>
                                    <TextBlock Text="Device" Style="{StaticResource SectionHeaderText}" />
                                    <ItemsControl ItemsSource="{Binding StatusDeviceRows}" ItemTemplate="{StaticResource InfoRowTemplate}" />
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CardBorder}" Grid.Column="1" Margin="6 0 0 0">
                                <StackPanel>
                                    <TextBlock Text="Network" Style="{StaticResource SectionHeaderText}" />
                                    <ItemsControl ItemsSource="{Binding StatusNetworkRows}" ItemTemplate="{StaticResource InfoRowTemplate}" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Account">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel>
                        <Border Background="{DynamicResource WarningBackgroundBrush}" BorderBrush="{DynamicResource WarningBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0 0 0 12"
                                Visibility="{Binding ShowIdentityUnavailable, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Account data unavailable (offline or provider failed)." Foreground="{DynamicResource WarningForegroundBrush}" FontSize="12" />
                        </Border>
                        <Border Style="{StaticResource CardBorder}" Margin="0">
                            <StackPanel>
                                <TextBlock Text="{Binding IdentitySourceLabel}" Style="{StaticResource SectionHeaderText}" />
                                <TextBlock Text="{Binding IdentitySourceCaption}" Foreground="{DynamicResource TextMutedBrush}" FontSize="11" Margin="0 0 0 6" />
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 6">
                                    <Button Style="{StaticResource ChipButtonStyle}"
                                            Content="Copy UPN"
                                            Command="{Binding CopyTextCommand}"
                                            CommandParameter="{Binding PrimaryUpn}" />
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding IdentityRows}" ItemTemplate="{StaticResource InfoRowTemplate}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel ItemWidth="320" MinWidth="300" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Margin" Value="0 4 12 4" />
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Network">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                            <Button Style="{StaticResource ChipButtonStyle}"
                                    Content="Open Network settings"
                                    Command="{Binding OpenSettingsCommand}"
                                    CommandParameter="ms-settings:network-status" />
                            <Button Style="{StaticResource ChipButtonStyle}"
                                    Content="Open VPN settings"
                                    Command="{Binding OpenSettingsCommand}"
                                    CommandParameter="ms-settings:network-vpn" />
                        </StackPanel>
                        <Border Style="{StaticResource CardBorder}" Margin="0 0 0 10">
                            <ItemsControl ItemsSource="{Binding NetworkRows}" ItemTemplate="{StaticResource InfoRowTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="0 2 12 2" />
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </Border>
                        <Border Style="{StaticResource CardBorder}">
                            <ItemsControl ItemsSource="{Binding OverviewRows}" ItemTemplate="{StaticResource InfoRowTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="2" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="0 2 12 2" />
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Support"
                     Visibility="{Binding ShowSupportTab, Converter={StaticResource BoolToVisibility}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Links" Style="{StaticResource SectionHeaderText}"
                                       Visibility="{Binding HasLinks, Converter={StaticResource BoolToVisibility}}" />
                            <ItemsControl ItemsSource="{Binding Links}"
                                          Visibility="{Binding HasLinks, Converter={StaticResource BoolToVisibility}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel ItemWidth="210" ItemHeight="48" MinWidth="210" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource LinkButtonStyle}"
                                                Content="{Binding Name}"
                                                Command="{Binding DataContext.LinkCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding Url}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="12 0 0 0">
                            <TextBlock Text="Local sites" Style="{StaticResource SectionHeaderText}"
                                       Visibility="{Binding HasLocalSites, Converter={StaticResource BoolToVisibility}}" />
                            <ItemsControl ItemsSource="{Binding LocalSites}"
                                          Visibility="{Binding HasLocalSites, Converter={StaticResource BoolToVisibility}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Style="{StaticResource LinkButtonStyle}"
                                                Content="{Binding Label}"
                                                Command="{Binding DataContext.LocalSiteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding Url}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Contacts" Style="{StaticResource SectionHeaderText}" Margin="0 12 0 0"
                                       Visibility="{Binding HasContacts, Converter={StaticResource BoolToVisibility}}" />
                            <ItemsControl ItemsSource="{Binding Contacts}"
                                          Visibility="{Binding HasContacts, Converter={StaticResource BoolToVisibility}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardBorder}" Margin="0 6 0 0" Padding="10">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Label}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" />
                                                <TextBlock Text="{Binding Email}" Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <TextBlock Text="{Binding Phone}" Foreground="{DynamicResource TextSecondaryBrush}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Troubleshoot"
                     Visibility="{Binding ShowTroubleshootTab, Converter={StaticResource BoolToVisibility}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280" MinWidth="220" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel: Action List -->
                    <Border Grid.Column="0"
                            BorderBrush="{DynamicResource CardBorderBrush}"
                            BorderThickness="0 0 1 0"
                            Background="{DynamicResource CardBackgroundBrush}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Search Box -->
                            <Border Grid.Row="0" Padding="8" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="0 0 0 1">
                                <TextBox Text="{Binding FixSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource SearchTextBoxStyle}"
                                         Tag="Search actions..." />
                            </Border>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0">
                            <ItemsControl ItemsSource="{Binding FilteredFixesByCategory}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0 0 0 4">
                                            <!-- Category Header -->
                                            <Border Background="{DynamicResource ChipBackgroundBrush}"
                                                    Padding="10 6"
                                                    Margin="0 0 0 2">
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource TextLabelBrush}" />
                                            </Border>
                                            <!-- Actions in Category -->
                                            <ItemsControl ItemsSource="{Binding Actions}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border x:Name="ActionItem"
                                                                Padding="10 8"
                                                                Background="Transparent"
                                                                Cursor="Hand"
                                                                BorderThickness="0 0 0 1"
                                                                BorderBrush="{DynamicResource CardBorderBrush}">
                                                            <Border.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick"
                                                                              Command="{Binding DataContext.SelectFixCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                              CommandParameter="{Binding}" />
                                                            </Border.InputBindings>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="{Binding Name}"
                                                                               FontSize="12"
                                                                               FontWeight="Medium"
                                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                                               TextTrimming="CharacterEllipsis" />
                                                                    <TextBlock Text="{Binding Description}"
                                                                               FontSize="10"
                                                                               Foreground="{DynamicResource TextMutedBrush}"
                                                                               TextTrimming="CharacterEllipsis"
                                                                               MaxWidth="200" />
                                                                </StackPanel>
                                                                <Path Grid.Column="1"
                                                                      Data="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5L12 1z"
                                                                      Fill="{DynamicResource WarningForegroundBrush}"
                                                                      Width="12" Height="12"
                                                                      Stretch="Uniform"
                                                                      VerticalAlignment="Center"
                                                                      Margin="4 0 0 0"
                                                                      ToolTip="Requires administrator"
                                                                      Visibility="{Binding RequiresAdmin, Converter={StaticResource BoolToVisibility}}" />
                                                            </Grid>
                                                        </Border>
                                                        <DataTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="ActionItem" Property="Background" Value="{DynamicResource ChipHoverBackgroundBrush}" />
                                                            </Trigger>
                                                        </DataTemplate.Triggers>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Right Panel: Details + Output -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Selected Action Details -->
                        <Border Grid.Row="0"
                                Padding="16 12"
                                Background="{DynamicResource CardBackgroundBrush}"
                                BorderBrush="{DynamicResource CardBorderBrush}"
                                BorderThickness="0 0 0 1"
                                Visibility="{Binding HasSelectedFix, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding SelectedFix.Name}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   VerticalAlignment="Center" />
                                        <Path Data="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5L12 1z"
                                              Fill="{DynamicResource WarningForegroundBrush}"
                                              Width="14" Height="14"
                                              Stretch="Uniform"
                                              VerticalAlignment="Center"
                                              Margin="6 0 0 0"
                                              ToolTip="Requires administrator privileges"
                                              Visibility="{Binding SelectedFix.RequiresAdmin, Converter={StaticResource BoolToVisibility}}" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding SelectedFix.Description}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"
                                               Margin="0 4 0 0" />
                                    <TextBlock Text="{Binding SelectedFixAdminText}"
                                               FontSize="11"
                                               Foreground="{DynamicResource WarningForegroundBrush}"
                                               Margin="0 4 0 0"
                                               Visibility="{Binding SelectedFix.RequiresAdmin, Converter={StaticResource BoolToVisibility}}" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                    <Button Style="{StaticResource LinkButtonStyle}"
                                            MinWidth="80"
                                            Height="34"
                                            Padding="12 6"
                                            Command="{Binding ToggleFixCommand}">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Path Data="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5L12 1z"
                                                  Fill="{DynamicResource WarningForegroundBrush}"
                                                  Width="14" Height="14"
                                                  Stretch="Uniform"
                                                  Margin="0 0 6 0"
                                                  VerticalAlignment="Center"
                                                  Visibility="{Binding ShowFixAdminIcon, Converter={StaticResource BoolToVisibility}}" />
                                            <TextBlock Text="{Binding FixButtonText}" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- No Selection Placeholder -->
                        <Border Grid.Row="0"
                                Grid.RowSpan="3"
                                Padding="16"
                                Visibility="{Binding HasSelectedFix, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Select an action"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource TextMutedBrush}"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="Choose an action from the list to see details and run it"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextMutedBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0 4 0 0" />
                            </StackPanel>
                        </Border>

                        <!-- Output Panel -->
                        <Border Grid.Row="1"
                                Padding="8"
                                Background="{DynamicResource WindowBackgroundBrush}"
                                Visibility="{Binding HasSelectedFix, Converter={StaticResource BoolToVisibility}}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- Output Header -->
                                <Border Grid.Row="0"
                                        Padding="8 6"
                                        Background="{DynamicResource CardBackgroundBrush}"
                                        CornerRadius="4 4 0 0"
                                        BorderBrush="{DynamicResource CardBorderBrush}"
                                        BorderThickness="1 1 1 0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Output"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextLabelBrush}"
                                                       VerticalAlignment="Center" />
                                            <!-- Running Indicator -->
                                            <Border Background="{DynamicResource AccentBrush}"
                                                    CornerRadius="4"
                                                    Padding="6 2"
                                                    Margin="8 0 0 0"
                                                    Visibility="{Binding IsFixRunning, Converter={StaticResource BoolToVisibility}}">
                                                <TextBlock Text="Running..."
                                                           FontSize="10"
                                                           Foreground="White"
                                                           FontWeight="Medium" />
                                            </Border>
                                            <!-- Success Indicator -->
                                            <Border Background="{DynamicResource SuccessBackgroundBrush}"
                                                    BorderBrush="{DynamicResource SuccessBorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Padding="6 2"
                                                    Margin="8 0 0 0"
                                                    Visibility="{Binding FixSuccess, Converter={StaticResource BoolToVisibility}}">
                                                <TextBlock Text="Success"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource SuccessForegroundBrush}"
                                                           FontWeight="Medium" />
                                            </Border>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Style="{StaticResource ChipButtonStyle}"
                                                Content="Clear"
                                                FontSize="10"
                                                Height="22"
                                                MinWidth="50"
                                                Padding="8 2"
                                                Command="{Binding ClearOutputCommand}"
                                                Visibility="{Binding HasFixOutput, Converter={StaticResource BoolToVisibility}}" />
                                    </Grid>
                                </Border>

                                <!-- Output Content -->
                                <Border Grid.Row="1"
                                        Background="{DynamicResource OutputBackgroundBrush}"
                                        BorderBrush="{DynamicResource CardBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="0 0 4 4">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Auto"
                                                  Padding="8">
                                        <TextBox Text="{Binding FixOutput, Mode=OneWay}"
                                                 FontFamily="Consolas, Courier New, monospace"
                                                 FontSize="11"
                                                 Foreground="{DynamicResource OutputForegroundBrush}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 IsReadOnly="True"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Disabled"
                                                 HorizontalScrollBarVisibility="Disabled" />
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

        <Border Grid.Row="2"
                Padding="0 8 0 0"
                Background="Transparent"
                BorderBrush="{DynamicResource FooterBorderBrush}"
                BorderThickness="0 1 0 0"
                Margin="0 4 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Theme:"
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="0 0 8 0" />
                    <ComboBox ItemsSource="{Binding AvailableThemes}"
                              SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                              Style="{StaticResource ThemedComboBoxStyle}"
                              Width="100"
                              Height="28"
                              FontSize="12" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding LastUpdatedText}"
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="11"
                               FontStyle="Italic"
                               VerticalAlignment="Center" />
                    <Border Background="{DynamicResource WarningBackgroundBrush}"
                            BorderBrush="{DynamicResource WarningBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="6 2"
                            Margin="8 0 0 0"
                            Visibility="{Binding IsUsingCachedData, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="Offline"
                                   Foreground="{DynamicResource WarningForegroundBrush}"
                                   FontSize="10"
                                   FontWeight="Medium" />
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Refresh"
                            Style="{StaticResource ChipButtonStyle}"
                            Command="{Binding RefreshCommand}"
                            Margin="0 0 8 0"
                            MinWidth="70" />
                    <Button Content="Close"
                            Style="{StaticResource CloseButtonStyle}"
                            IsCancel="True"
                            Click="Close_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
